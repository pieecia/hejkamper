<div class="container mx-auto flex max-w-[980px] px-6 md:px-0 justify-center">
  <div class="flex-col">
    <div class="mt-6">
      <%= render_card title: "Zaloguj się", class: "w-100 sm:w-[550px]" do %>
        <%= render_form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
          <div class="p-5">
            <div class="grid grid-cols-3 items-baseline mb-4">
              <%= form.label :email, class: "text-right mr-4 text-lg" %>
              <%= form.text_field :email, class: "col-span-2" %>
            </div>
            <div class="grid grid-cols-3 items-baseline mb-4">
              <%= form.label :password, class: "text-right mr-4 text-lg" %>
              <%= form.password_field :password, class: "col-span-2" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="grid grid-cols-3 items-baseline mb-8">
                <%= form.label :remember_me, class: "text-right mr-4 text-lg" %>
                <%= form.check_box :remember_me, class: "col-span-2" %>
              </div>
            <% end %>
            <div class="flex justify-center">
              <%= form.submit "Zaloguj się" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>