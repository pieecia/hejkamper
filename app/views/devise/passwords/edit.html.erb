<div class="container mx-auto flex max-w-[980px] px-6 md:px-0 justify-center">
  <div class="flex-col">
    <div class="mt-6">
      <%= render_card title: t(".title"), class: "w-[550px]" do %>
        <%= render_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |form| %>
          <%= form.hidden_field :reset_password_token %>
          <div class="px-6 pb-6">
            <div class="grid grid-cols-3 items-baseline mb-4">
              <%= form.label :password, label: t(".new_password"), class: "text-right mr-4 text-lg" %>
              <div class="col-span-2">
                <%= form.password_field :password, autofocus: true, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <p class="text-sm text-gray-500 mt-1">
                    (<%= @minimum_password_length %> <%= t(".minimum_length") %>)
                  </p>
                <% end %>
              </div>
            </div>
            <div class="grid grid-cols-3 items-baseline mb-4">
              <%= form.label :password_confirmation, label: t(".confirm_password"), class: "text-right mr-4 text-lg" %>
              <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "col-span-2" %>
            </div>
            <div class="text-right mt-6">
              <%= form.submit t(".submit") %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
